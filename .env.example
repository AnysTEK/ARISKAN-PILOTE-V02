## Base de données
DATABASE_URL="file:./dev.db"

## NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="votre-secret-nextauth-ici"

## Chiffrement
ENCRYPTION_KEY="votre-clé-de-chiffrement-32-bytes"

## Configuration Email (SMTP)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="votre-email@example.com"
SMTP_PASSWORD="votre-mot-de-passe-smtp"
EMAIL_FROM="noreply@ariskan.fr"

## Stockage de fichiers
STORAGE_BUCKET="nom-du-bucket"
STORAGE_REGION="region-du-bucket"
STORAGE_ACCESS_KEY="votre-access-key"
STORAGE_SECRET_KEY="votre-secret-key"

## Blockchain (pour la traçabilité des documents)
BLOCKCHAIN_API_URL="https://api.blockchain.example.com"
BLOCKCHAIN_API_KEY="votre-clé-api-blockchain"

## Sécurité
JWT_SECRET="votre-secret-jwt-32-bytes"
COOKIE_SECRET="votre-secret-cookie-32-bytes"

## Configuration de l'application
APP_NAME="ARISKAN PILOTE"
APP_ENV="development"
APP_URL="http://localhost:3000"
APP_DEBUG="true"

## Limites et quotas
MAX_UPLOAD_SIZE="10485760" # 10MB en bytes
MAX_CONCURRENT_UPLOADS="3"
RATE_LIMIT_WINDOW="900000" # 15 minutes en millisecondes
RATE_LIMIT_MAX_REQUESTS="100"